---
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' }
];
const phoneNumber = '+1 (555) 123-4567';
---

<nav style="width:100%; background:#fff; border-bottom:1px solid #eee;">
  <div  class="flex justify-center py-4 items-center w-[1200px] mx-auto">
    <!-- Left: Logo -->
    <div style="flex:1;">
      <a href="/" style="font-weight:bold; font-size:1.25rem; color:#333; text-decoration:none;">
        MyLogo
      </a>
    </div>
    <!-- Center: Links -->
    <div style="flex:1; text-align:center;">
      {links.map(link => (
        <a href={link.href} style="margin:0 1rem; color:#333; text-decoration:none;">
          {link.label}
        </a>
      ))}
    </div>
    <!-- Right: Phone Number -->
    <div style="flex:1; text-align:right;">
      <span style="color:#333;">{phoneNumber}</span>
    </div>
  </div>
</nav>
